
    <div class="app-admin">
        {{> headers/headerAdmin}}
        <div class="container__admin">
            <div class="grid wide">
                <h2 class="text-center text-success mt-5 mb-5">Danh Sách Người Dùng</h2>
                <table class="table table-striped">
                    <thead class="text-center">
                        <tr>
                          <th>Username</th>
                          <th>Name</th>
                          <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {{#each account}}
                        <tr>
                            <td>{{email}}</td>
                            <td>{{password}}</td>
                            <td>
                                <button href="" class="btn--view admin_view_user" data-id="{{_id}}" data-username="{{email}}" data-password="{{password}}">Xem</button>
                                <button href="" class="btn--delete admin_delete_user" data-id="{{_id}}" data-username="{{email}}" data-password="{{password}}">Xóa</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table> 
            </div>
        </div>
        {{> footers/footerAdmin}}
    </div>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

<div class="modal modal-view-user">
    <div class="modal__overlay modal__overlay-view"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-user">
            <h2 class="auth-form-user-heading">Thông tin người dùng</h2>
            <section class="profile">
                <div class="profile-content">
                    <div class="profile-group">
                        <div class="profile-item"><strong> Username: </strong><span id="username-view-user"></span></div>
                        <div class="profile-item"><strong> Password: </strong><span id="password-view-user"></span></div>
                        <div class="profile-item"><strong> Email:</strong> </div>
                        <div class="profile-item"><strong> Tên:</strong> </div>
                        <div class="profile-item"><strong> Ngày sinh:</strong> </div>
                        <div class="profile-item"><strong> Địa chỉ:</strong> </div>
                        <div class="profile-item"><strong> Số dư:</strong></div>
                        <div class="profile-item"><strong> Trạng thái tài khoản:</strong></div>
                    </div>
                </div>
            </section>
            <div class="auth-form-user-control">
                <button class="btn-close-view-user">Đóng</button>
            </div>
        </div>
    </div>
</div>

{{!-- Modal add user --}}
<div class="modal modal-delete-user">
    <div class="modal__overlay modal__overlay-register"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <div class="auth-form__header">
                    <h2>Xóa người dùng</h2>
                </div>

                <div class="auth-form__content">
                    <span>Bạn có chắc là muốn xóa người dùng <strong id="username-delete"> </strong></span>
                </div>                

                <div class="auth-form__controls auth-form__controls-add" style="margin-top: 30px">
                    <button class="btn auth-form__controls-back btn--normal btn-close-delete-user" style="font-size: 1.6rem; background-color: rgba(0, 0, 0, 0.05);">Hủy</button>
                    <button class="btn--delete btn-delete-user">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>