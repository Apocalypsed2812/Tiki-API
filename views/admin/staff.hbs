
    <div class="app-admin">
        {{> headers/headerAdmin}}
        <div class="container__admin">
            <div class="grid wide">
                <h2 class="text-danger mt-5 mb-3 text-center">Quản lý nhân viên</h2>
                <div class="heading"><button type="button" class="btn--edit btn-add-staff">Thêm</button>
                </div>
                <div class="staffs mt-4">
                    <table class="table table-striped">
                        <thead>
                            <tr style="text-align: center;">
                                <th scope="col">Full name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Email</th>
                                <th scope="col">Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each staff}}
                            <tr style="text-align: center;">
                                <td>{{name}}</td>
                                <td>{{phone}}</td>
                                <td>{{email}}</td>
                                <td>{{address}}</td>
                                    <td>
                                    <button href="" class="btn--view admin_view_staff" data-id="{{_id}}" data-username="{{email}}" data-password="{{password}}" data-name="{{name}}" data-phone="{{phone}}" data-address="{{address}}">Xem</button>
                                    <button href="" class="btn--edit admin_edit_staff" data-id="{{_id}}" data-username="{{email}}" data-password="{{password}}" data-name="{{name}}" data-phone="{{phone}}" data-address="{{address}}">Sửa</button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>  
            </div>
        </div>
        {{> footers/footerAdmin}}
    </div>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

<div class="modal modal-view-staff">
    <div class="modal__overlay modal__overlay-register"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-staff">
            <h2 class="auth-form-user-heading">Thông tin nhân viên</h2>
            <section class="profile">
                <div class="profile-content">
                    <div class="profile-group">
                        <div class="profile-item"><strong> Email: </strong><span id="email-view-staff"></span></div>
                        <div class="profile-item"><strong> Tên: </strong><span id="name-view-staff"></span></div>
                        <div class="profile-item"><strong> Địa chỉ: </strong><span id="address-view-staff"></span></div>
                        <div class="profile-item"><strong> Số điện thoại: </strong><span id="phone-view-staff"></span></div>
                    </div>
                </div>
            </section>
            <div class="auth-form-staff-control">
                <button class="btn-close-view-staff">Đóng</button>
            </div>
        </div>
    </div>
</div>

{{!-- Modal add staff --}}
<div class="modal modal-add-staff">
    <div class="modal__overlay modal__overlay-register"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <div class="auth-form__header">
                    <h2>Thêm nhân viên</h2>
                </div>
            <form action="/admin/addStaff" method="post">
                <div class="auth-form__form">
                    <div class="auth-form__group">
                        <input type="text" class="auth-form__input" placeholder="Email của bạn" name="email" id="email_add_staff">
                    </div>
                    <div class="auth-form__group">
                        <input type="text" class="auth-form__input" placeholder="Tên của bạn" name="name" id="name_add_staff">
                    </div>
                    <div class="auth-form__group">
                        <input type="text" class="auth-form__input" placeholder="Số điện thoại của bạn" name="phone" id="phone_add_staff">
                    </div>
                    <div class="auth-form__group">
                        <input type="text" class="auth-form__input" placeholder="Địa chỉ của bạn" name="address" id="address_add_staff">
                    </div>
                </div>

                <div class="auth-form__controls auth-form__controls-add">
                    <button type="button" class="btn auth-form__controls-back btn--normal btn-close-add-staff" style="font-size: 1.6rem; background-color: rgba(0, 0, 0, 0.05);">Hủy</button>
                    <button type="submit" class="btn btn--primary btn-add-staff" style="font-size: 1.6rem">Thêm</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>

{{!-- Modal edit staff --}}
