<div class="app-admin">
        {{> headers/headerStaff}}
        <div class="container__admin">
            <div class="grid wide">
                <h2 class="text-center text-success mt-5 mb-5">Quản lý danh mục</h2>
                <button class="btn--edit add_category btn-add-category">Thêm danh mục</button>
                <table class="table table-striped">
                    <thead class="text-center">
                        <tr style="text-align: center;">
                          <th>Tên danh mục</th>
                          <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {{#each category}}
                        <tr style="text-align: center;">
                            <td>{{name}}</td>
                            <td>
                                <button href="" class="btn--view admin_view_category" data-id="{{_id}}" data-name="{{name}}">Xem</button>
                                <button href="" class="btn--edit admin_edit_category" data-id="{{_id}}" data-name="{{name}}">Sửa</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table> 
            </div>
        </div>
        {{> footers/footerAdmin}}
    </div>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

<div class="modal modal-view-category">
    <div class="modal__overlay modal__overlay-register"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-staff">
            <h2 class="auth-form-user-heading">Thông tin danh mục</h2>
            <section class="profile">
                <div class="profile-content">
                    <div class="profile-group">
                        <div class="profile-item"><strong> Tên: </strong><span id="name-view-category"></span></div>
                    </div>
                </div>
            </section>
             <div class="auth-form-staff-control">
                <button class="btn-close-view-category">Đóng</button>
            </div>
        </div>
    </div>
</div>

{{!-- Modal add staff --}}
<div class="modal modal-add-category">
        <div class="modal__overlay modal__overlay-register"></div>

        <div class="modal__body modal__container">
            <!-- Register form -->
            <div class="auth-form auth-form-register">
                <div class="auth-form__container">
                    <div class="auth-form__header">
                        <h2>Thêm danh mục</h2>
                    </div>
                <form action="/staff/addCategory" method="post">
                    <div class="auth-form__form">
                        <div class="auth-form__group">
                            <input type="text" class="auth-form__input" placeholder="Tên danh mục" name="name" id="name-add-category">
                        </div>
                    </div>

                    <div class="auth-form__controls auth-form__controls-add">
                        <button type="buton" class="btn auth-form__controls-back btn--normal btn-close-add-category" style="font-size: 1.6rem; background-color: rgba(0, 0, 0, 0.05);">Hủy</button>
                        <button type="submit" class="btn btn--primary btn-add-staff" style="font-size: 1.6rem">Thêm</button>
                    </div>
                </form>
                </div>
            </div>
        </div>
</div>

{{!-- Modal edit staff --}}
<div class="modal modal-edit-category">
    <div class="modal__overlay modal__overlay-register"></div>

    <div class="modal__body modal__container">
        <!-- Register form -->
        <div class="auth-form auth-form-register">
            <div class="auth-form__container">
                <div class="auth-form__header">
                    <h2>Sửa danh mục</h2>
                </div>

                <div class="auth-form__form">
                    <div class="auth-form__group">
                        <input type="text" class="auth-form__input" placeholder="Tên danh mục" name="name" id="name-edit-category">
                    </div>
                </div>

                <div class="auth-form__controls auth-form__controls-add">
                    <button class="btn auth-form__controls-back btn--normal btn-close-edit-category" style="font-size: 1.6rem; background-color: rgba(0, 0, 0, 0.05);">Hủy</button>
                    <button class="btn btn--primary btn-edit-category" style="font-size: 1.6rem">Sửa</button>
                </div>
            </div>
        </div>
    </div>
</div>