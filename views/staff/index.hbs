
    <div class="app-admin">
        {{> headers/headerStaff}}
        <div class="container__admin">
            <div class="grid wide">
                <h2 class="text-center text-success mt-5 mb-5">Danh Sách Người Dùng</h2>
                <table class="table table-striped">
                    <thead class="text-center">
                        <tr>
                          <th>Username</th>
                          <th>Name</th>
                          <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        {{#each account}}
                        <tr>
                            <td>{{email}}</td>
                            <td>{{password}}</td>
                            <td>
                                <button href="" class="btn--view admin_view_user" data-id="{{_id}}" data-username="{{username}}" data-password="{{password}}" data-name="{{name}}">Xem</button>
                                <button href="" class="btn--delete admin_delete_user" data-id="{{_id}}" data-username="{{username}}" data-password="{{password}}">Xóa</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table> 
            </div>
        </div>
        {{> footers/footerAdmin}}
    </div>

