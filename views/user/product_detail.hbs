
    <div class="app-product-detail">
        {{> headers/headerUser}}
        <div class="product-detail">
            <div class="grid wide">
                <div class="row">
                    {{#each product_detail}}
                    <div class="col c-12 m-6 l-5">
                        <div class="product-detail_img">
                            <img src="/assets/img/{{image}}" alt="">
                        </div>
                        <div class="product-detail-share">
                            <div class="product-detail__icon">
                                Chia sẻ:
                                <i class="fab fa-facebook"></i>
                                <i class="fab fa-instagram"></i>
                            </div>
                            <div class="product-detail__like">
                                <i class="fas fa-heart"></i>
                                Đã thích (5,5K)
                            </div>
                        </div>
                    </div>
                    <div class="col c-12 m-6 l-7">
                        <div class="product-detail__content">
                            <div class="product-detail__content__heading">{{name}}</div>
                            <div class="product-detail__price">
                                <div class="product-detail__price-old">đ{{formatNumber old_price}}</div>
                                <div class="product-detail__price-new">đ{{formatNumber new_price}}</div>
                                <div class="product-detail__price-sale">50% GIẢM</div>
                            </div>
                            <div class="product-detail__deal">
                                <p>Deal Sốc</p>
                                <p class="product-detail__deal-buy">Mua để nhận quà</p>
                            </div>
                            <div class="product-detail__transport">
                                <p>Vận chuyển</p>
                                <p>Miễn phí vận chuyển</p>
                            </div>
                            <div class="product-detail__color">
                                <p>Màu</p>
                                <ul class="product-detail__color-list">
                                    <li class="product-detail__color-item">
                                        LA xanh lá
                                    </li>
                                    <li class="product-detail__color-item">
                                        Memori kem
                                    </li>
                                    <li class="product-detail__color-item">
                                        Memori kem
                                    </li>
                                    <li class="product-detail__color-item">
                                        Memori kem
                                    </li>
                                    <li class="product-detail__color-item">
                                        Memori kem
                                    </li>
                                    <li class="product-detail__color-item">
                                        Memori kem
                                    </li>
                                    <li class="product-detail__color-item">
                                        Memori kem
                                    </li>
                                </ul>
                            </div>
                            <div class="product-detail__quantity">
                                <p>Số lượng</p>
                                <div class="product-detail__quantity-number">
                                    <button class="sub-quantity-product-detail">-</button>
                                    <button class="current-quantity-product-detail">1</button>
                                    <button class="add-quantity-product-detail">+</button>
                                </div>
                                <p>{{quantity}} sản phẩm có sắn</p>
                            </div>
                            <div class="product-detail__button">
                                <button class="product-detail__button-cart btn btn-user-add-to-cart" data-id="{{_id}}" data-quantity="{{quantity}}">
                                    <i class="fa-solid fa-cart-plus"></i>
                                    Thêm vào giỏ hàng
                                </button>
                                <button class="product-detail__button-buy btn btn--primary btn-buy-immediately">Mua ngay</button>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <h2 class="product-category__heading">Các sản phẩm liên quan</h2>
                <div class="row product-category__content">
                    {{#each list_product_category}}
                        <div class="col l-2-4 m-4 c-6 home-product-item-wrapper">
                            <a class="home-product-item" href="/user/product_detail/{{_id}}">
                                <div class="home-product-item__img" style="background-image: url(/assets/img/{{image}});"></div>
                                <h4 class="home-product-item__name">{{name}}</h4>
                                <div class="home-product-item__price">
                                    <span class="home-product-item__price-old">{{old_price}}đ</span>
                                    <span class="home-product-item__price-current">{{new_price}}đ</span>
                                </div>
                                <div class="home-product-item__action">
                                    <span class="home-product-item__like home-product-item__like--liked">
                                        <i class="home-product-item__like-icon-empty far fa-heart"></i>
                                        <i class="home-product-item__like-icon-fill fas fa-heart"></i>
                                    </span>
                                    <div class="home-product-item__rating">
                                        <i class="home-product-item__star--gold fas fa-star"></i>
                                        <i class="home-product-item__star--gold fas fa-star"></i>
                                        <i class="home-product-item__star--gold fas fa-star"></i>
                                        <i class="home-product-item__star--gold fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <span class="home-product-item__sold">88 đã bán</span>
                                </div>
                                <div class="home-product-item__origin">
                                    <span class="home-product-item__brand">Whoo</span>
                                    <span class="home-product-item__origin-name">Nhật Bản</span>
                                </div>
                                <div class="home-product-item__favourite">
                                    <i class="fas fa-check"></i>
                                    <span>Yêu thích</span>
                                </div>
                                <div class="home-product-item__sale-off">
                                    <span class="home-product-item__sale-off-percent">43%</span>
                                    <span class="home-product-item__sale-off-label">GIẢM</span>
                                </div>
                            </a>      
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>

        {{> footers/footerUser}}
    </div>
